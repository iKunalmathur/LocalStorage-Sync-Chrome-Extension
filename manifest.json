{
  "manifest_version": 3,
  "name": "Token Sync",
  "version": "1.0.0",
  "description": "Sync access token from Dev environment localStorage to localhost.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Sync token to localhost",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}